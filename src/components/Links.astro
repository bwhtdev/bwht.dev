---
import Link from './Link.astro';

interface Props {
  small?: boolean;
}
const { small=false } = Astro.props as Props;

const LINKS = [{
  url: 'https://www.github.com/bwhtdev',
  name: 'GitHub',
  icon: `<path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/>`
}, {
  url: 'https://www.linkedin.com/in/bwht',
  name: 'LinkedIn',
  icon: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>`
}, {
  url: 'https://www.linkedin.com/in/bwht',
  name: 'Resume',
  icon: `<path d="M15 12h-5"/><path d="M15 8h-5"/><path d="M19 17V5a2 2 0 0 0-2-2H4"/><path d="M8 21h12a2 2 0 0 0 2-2v-1a1 1 0 0 0-1-1H11a1 1 0 0 0-1 1v1a2 2 0 1 1-4 0V5a2 2 0 1 0-4 0v2a1 1 0 0 0 1 1h3"/>`
}, {
  url: 'https://www.x.com/bwhtdev',
  name: '.COM',
  icon: `<path d="M14.243 10.168 22.99 0h-2.073L13.322 8.829 7.255 0H0.258l9.174 13.351L0.258 24.015h2.0731L10.352 14.690 16.759 24.015h6.997L14.242 10.168ZM11.403 13.469l-0.929-1.329-7.395-10.578h3.184L12.230 10.098l0.929 1.329 7.758 11.097h-3.183L11.403 13.469" class="fill-gray-800 dark:fill-[#D08A8A]" style="stroke-width:.104373"></path>`
}];
---
<div class='flex gap-2 flex-row flex-wrap'>
  {LINKS.map(({ url, name, icon }) => (
    <Link url={url} name={name} small={small}>
      <Fragment set:html={icon} />
    </Link>
  ))}
  
  <button
    @click="modalOpen=true"
    class='flex gap-1 cursor-pointer font-baunk text-gray-800 dark:text-gray-200 h-12 items-center justify-center space-y-2 font-semibold rounded-lg border-[1px] border-none bg-[rgba(208,138,138,0.5)] dark:bg-[rgba(163,82,82,0.5)] px-4 py-2 text-sm rounded-md shadow-md active:translate-y-[2px] transition-all duration-300 ease-out hover:shadow-[rgba(163,82,82,0.4)] dark:hover:shadow-[rgba(250,160,160,0.4)]'>
    <svg
      class='stroke-gray-800 dark:stroke-[#D08A8A]'
      width="1.5em" height="1.5em" viewBox="0 0 14 14"
      fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
    >
      <title>Contact</title>
      <path d="M12.5 1.75h-11a1 1 0 0 0-1 1v8.5a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-8.5a1 1 0 0 0-1-1"/><path d="m.5 3l5.86 3.524c.18.106.406.163.64.163c.234 0 .46-.057.64-.163L13.5 3"/></g>
    </svg>
    {!small && (<bold>Contact</bold>)}
  </button>
</div>
