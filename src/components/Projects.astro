//  JavaIcon
} from './devIcons';

interface project {
  title: string;
  github: string;
  url: string;
  desc: string;
  tech: string[];
}

const PROJECTS: project[] = [{
  title: 'Project 1',
  github: 'https://github.com/bradswhite/project1',
  url: 'https://vercel.com',
  desc: 'Project details..',
  tech: [ TypeScriptIcon, AstroIcon, TailwindIcon, GoIcon ]
}, {
  title: 'Project 2',
